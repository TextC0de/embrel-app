{
  "name": "embrel-desktop",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm run electron:build && concurrently \"vite\" \"npm run electron:dev\"",
    "dev:vite-only": "vite",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "build": "npm run type-check && vite build && npm run electron:build",
    "electron:build": "tsc --project tsconfig.node.json --noEmit false --outDir dist-electron",
    "type-check": "tsc --noEmit",
    "generate-icons": "electron-icon-builder --input=public/icon.png --output=public --flatten",
    "predist": "npm run generate-icons",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win portable",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-is-dev": "^3.0.1",
    "express": "^5.1.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "robotjs": "^0.6.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "build": {
    "appId": "com.embrel.desktop",
    "productName": "EMBREL Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "public/**/*",
      "!node_modules/robotjs/build/**/*",
      "!node_modules/@robotjs/**/*"
    ],
    "asarUnpack": [
      "node_modules/robotjs/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "EMBREL-Desktop-Portable-${version}.exe",
      "requestExecutionLevel": "admin",
      "unpackDirName": "embrel-desktop"
    }
  }
}
